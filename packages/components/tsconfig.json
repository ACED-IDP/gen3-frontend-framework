{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../../node_modules/",
    "node_modules",
    "src/**/*.spec.ts*",
  ],
  "compilerOptions": {
    "outDir": "dist/dts",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/*"
      ]
    }
  }
}
